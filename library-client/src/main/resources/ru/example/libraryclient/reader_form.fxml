<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="ru.example.libraryclient.controller.ReaderFormController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="ФИО:"/>
    <TextField fx:id="fullNameField"/>

    <Label text="Телефон:"/>
    <TextField fx:id="phoneField"/>

    <Label text="Email:"/>
    <TextField fx:id="emailField"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveBtn" text="Сохранить" onAction="#handleSave"/>
        <Button fx:id="cancelBtn" text="Отмена" onAction="#handleCancel"/>
    </HBox>
    <Label fx:id="errorLabel" text="" style="-fx-text-fill: #b00;"/>
</VBox> 