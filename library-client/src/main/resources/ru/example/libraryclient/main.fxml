<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.example.libraryclient.MainController" spacing="10" alignment="TOP_CENTER" style="-fx-padding: 15;">
    <Label text="Список книг" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Блок фильтров и сортировки -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Название:"/>
        <TextField fx:id="filterTitleField"/>
        <Label text="Жанр:"/>
        <TextField fx:id="filterGenreField"/>
        <Label text="Автор:"/>
        <TextField fx:id="filterAuthorField"/>
        <Label text="Год:"/>
        <TextField fx:id="filterYearField"/>
    </HBox>

    <TableView fx:id="bookTable" prefHeight="300" prefWidth="700">
        <columns>
            <TableColumn fx:id="titleCol" text="Название" prefWidth="180"/>
            <TableColumn fx:id="yearCol" text="Год" prefWidth="60"/>
            <TableColumn fx:id="genreCol" text="Жанр" prefWidth="100"/>
            <TableColumn fx:id="pagesCol" text="Страницы" prefWidth="80"/>
            <TableColumn fx:id="authorCol" text="Автор" prefWidth="180"/>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addBtn" text="Добавить"/>
        <Button fx:id="editBtn" text="Редактировать"/>
        <Button fx:id="deleteBtn" text="Удалить"/>
        <Button fx:id="refreshBtn" text="Обновить"/>
        <Button fx:id="authorsBtn" text="Авторы"/>
        <Button fx:id="statsBtn" text="Статистика"/>
        <Button fx:id="aboutBtn" text="Об авторе"/>
        <Button fx:id="logoutBtn" text="Выйти"/>
    </HBox>
    <Label fx:id="statusLabel" text="" style="-fx-text-fill: #b00;"/>
</VBox>